{
  "name": "obsidian-ratings-monorepo",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "legacy:dev": "next dev --port 5000",
    "legacy:generate-rss": "node utils/generate-rss.js",
    "legacy:submit-indexnow": "node utils/indexnow.mjs",
    "legacy:build": "npm run legacy:generate-rss && next build",
    "legacy:start": "next start",
    "legacy:postinstall": "prisma generate",
    "legacy:postbuild": "next-sitemap --config next-sitemap.config.js",
    "prettier": "prettier --write .",
    "test": "jest",
    "docs": "jsdoc -c jsdoc.config.json"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
