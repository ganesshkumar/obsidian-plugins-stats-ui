{
  "plugins": [
    "node_modules/better-docs/typescript",
    "better-docs/category"
  ],
  "source": {
    "include": ["./domain/scorer"],
    "includePattern": ".+\\.ts$"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "opts": {
    "encoding": "utf8",
    "destination": "public/docs/",
    "recurse": true,
    "verbose": true,
    "readme": "./docs-readme.md",
    "template": "node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "Obsidian Stats",
      "title": "Docs | Obsidian Stats",
      "footer": false
    }
  }
}